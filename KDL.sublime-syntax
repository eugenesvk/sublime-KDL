      captures            :
        1:                  invalid.illegal.kdl
      pop                 : 1
  ï½ðŸ›‘:
    - match               : \}
      scope               : punctuation.section.mapping.end.kdl invalid.illegal.position.kdl #âœ—ï½ðŸ›‘
      pop                 : 1
  ï½ðŸ›‘2:
    - match               : \}
      scope               : punctuation.section.mapping.end.kdl invalid.illegal.position.kdl #âœ—ï½ðŸ›‘
      pop                 : 2
  ï½ðŸ›‘3:
    - match               : \}
      scope               : punctuation.section.mapping.end.kdl invalid.illegal.position.kdl #âœ—ï½ðŸ›‘
      pop                 : 3
  ï½ðŸ›‘4:
    - match               : \}
      scope               : punctuation.section.mapping.end.kdl invalid.illegal.position.kdl #âœ—ï½ðŸ›‘
      pop                 : 4
  ï½:
