  # charID_ex_dig:            	'[[{{charID}}]&&[^{{d_dec}}]]'                               	#
  # charID_ex_dig_sign:       	'[[{{charID_ex_dig}}]&&[^+-]]'                               	#
  # unicode_char:             	'[\x{0021}-\x{10FFFF}]'                                      	# invalid: ‚â§0x20 or >0x10FFF)
  # keyword:                  	'{{boolean}}|{{nil}}'                                        	#
  # prop:                     	'{{ID}}={{value}}'                                           	#
  # prop_eq:                  	'({{b_sp}}?)({{b_sp}}*)(=)({{b_sp}}?)({{b_sp}}*)'            	#
  # value:                    	'{{type}}?({{string}}|{{number}}|{{keyword}})'               	#
  # type:                     	'\({{ID}}\)'                                                 	#
  #                           	                                                             	#
  char_illegal:               	'[{{bom}}{{c0a}}{{c0b}}{{cdel}}{{n_usc}}{{cdir}}]' #ss #     	# ST doesn't allow tracking BOM@file begin, so no need to add a BOF condition
  c0a:                        	  '[\x{0000}-\x{0008}]'                                      	#
